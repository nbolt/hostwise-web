    ul.carousel1.ng-scope rn-carousel='' rn-carousel-buffered='' rn-carousel-controls='' rn-carousel-index='carouselIndex'
      li ng-repeat=('t in testimonials')
        .text
          | {{::t.text}}
        img ng:src="{{::t.thumb}}"
        .name
          | {{::t.name}}
        .company
          | {{::t.company}}
