.home ng:controller='home'
  .hero ng:controller='modal'
    .title Get Your Property Cleaned Today, For Free.
    .subtitle We'll bring hotel quality linens, towels, and top-notch cleaners to ensure your guests receive a 5 Star experience -- every time.
    a.button.orange href='' ng-click='show_signup()' Book It For Free
    .note + $49 one-time property setup
