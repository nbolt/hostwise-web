.xenon.custom.note
  .page-body
    .main-content
      h3 = "#{@host.name} Notes"
      ul.cbp_tmtimeline
        = render 'common/notes', notes: @host.comments
        li
          time.cbp_tmtime
            span = Date.today.strftime '%Y-%m-%d'
            span
          .cbp_tmicon style="background-image: url(#{current_user.avatar});background-size:cover;"
          .cbp_tmlabel
            = form_tag(controller: 'hosts', action: 'new_note', method: 'post')
              = text_area_tag :comment, '', placeholder: 'Enter note here'
              = hidden_field_tag :user_id
              = submit_tag 'Enter Note', class: 'btn btn-info btn-icon'
