.xenon.custom ng:controller='admin_inventory'
  .panel.panel-default
    .panel-heading
      h3.panel-title Inventory
      .panel-options
        a data-toggle="panel" href="#"
          span.collapse-icon &ndash;
          span.expand-icon +
        a data-toggle="remove" href="#"
          | \&times;
    .panel-body.table-responsive
      table#example-1.table.table-striped.table-bordered cellspacing="0" width="100%"
        thead
          tr
            th Date
            th Location
            th Clean King Packs Picked Up
            th Clean Twin Packs Picked Up
            th Clean Pool Towels Picked Up
            th Clean Bed Covers Picked Up
            th Toiletry Packs Picked Up
            th Dirty King Sheets Dropped Off
            th Dirty Twin Sheets Dropped Off
            th Dirty Beach Towels Dropped Off
            th Dirty Bed Covers Dropped Off
        thead.search
          tr
            th Date
            th Location
            th
            th
            th
            th
            th
            th
            th
            th
            th
        tfoot
          tr
            th Date
            th Location
            th Clean King Packs Picked Up
            th Clean Twin Packs Picked Up
            th Clean Pool Towels Picked Up
            th Clean Bed Covers Picked Up
            th Toiletry Packs Picked Up
            th Dirty King Sheets Dropped Off
            th Dirty Twin Sheets Dropped Off
            th Dirty Beach Towels Dropped Off
            th Dirty Bed Covers Dropped Off
        tbody
          - @distro.each do |date, centers|
            - centers.each do |id, jobs|
              tr
                td= date
                td= DistributionCenter.find(id).name
                td
                  - @king_bed_count = 0
                  - jobs.each do |job|
                    - if job.king_beds != nil
                      - @king_bed_count += job.king_beds 
                  = @king_bed_count
                td
                  - @twin_bed_count = 0
                  - jobs.each do |job|
                    - if job.twin_beds != nil
                      - @twin_bed_count += job.twin_beds 
                  = @twin_bed_count
                td not currently available
                td
                  - @bed_count = 0
                  - jobs.each do |job|
                    - if job.king_beds != nil
                      - @bed_count += job.king_beds
                    - if job.twin_beds != nil
                      - @bed_count += job.twin_beds
                    - if job.queen_beds != nil
                      - @bed_count += job.queen_beds
                    - if job.full_beds != nil
                      - @bed_count += job.full_beds
                  = @bed_count
                td
                  = jobs.reduce(0) {|acc, job| acc + job.toiletries}
                td
                  = jobs.reduce(0) {|acc, job| acc + job.king_sheets}
                td
                  = jobs.reduce(0) {|acc, job| acc + job.twin_sheets}
                td
                  = jobs.reduce(0) {|acc, job| acc + job.king_sheets}
                td
                  = jobs.reduce(0) {|acc, job| acc + job.king_sheets + job.twin_sheets}