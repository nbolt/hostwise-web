#property ng:controller='property'
  #title
    .photo
      img ng:src='{{::property.property_photos[0].photo.url}}'
    .text
      .title ng:bind='::property.nickname'
      .address ng:bind='::property.short_address'
  #columns
    .column.calendar
      .section.calendar
        .head
          .arrow
            .typcn.typcn-chevron-right
          .icon
            .typcn.typcn-calendar-outline
          .text Add / Edit Service Dates
        #calendar calendar='' options='calendar_options'
    .column.info
      .section.map
        .head ng:click="expand('map')"
          .arrow
            .typcn.typcn-chevron-right
          .icon
            .typcn.typcn-location-outline
          .text ng:bind='::property.address1'
        .content-container
          #map
      .section.details
        .head ng:click="expand('details')"
          .arrow
            .typcn.typcn-chevron-right
          .icon
            .typcn.typcn-th-menu
          .text Edit Details
        .content-container
          .content
            .field.one
              .label Nickname
              .input.nickname
                .typcn.typcn-tick
                input type='text' ng:model='form.nickname'
            .field.one.property_type
              .label Property Type
              .input.property_type
                .typcn.typcn-tick
                input type='hidden' ui-select2='property_type()' ng:model='form.property_type'

= render 'common/booking_modal'
