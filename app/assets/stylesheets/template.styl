@keyframes fadein {
  from {opacity: 0}
  to   {opacity: 1}
}

@keyframes spin {
  from {transform: rotate(0deg)}
  to {transform: rotate(-360deg)}
}

@-webkit-keyframes bouncedelay {
  0%, 80%, 100% { -webkit-transform: scale(0.0) }
  40% { -webkit-transform: scale(1.0) }
}

@keyframes bouncedelay {
  0%, 80%, 100% { 
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 40% { 
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

desktop = "(min-width: 1025px)"
landscape_tablet = "(min-width: 769px) and (max-width: 1024px)"
portrait_tablet = "(min-width: 481px) and (max-width: 768px)"
phone = "(max-width: 480px)"

gray_shadow = 0 3px 0 0 rgba(0,0,0,0.1)

typicons()
  font-family:'typicons';font-style:normal;font-weight:normal;speak:none;display:inline-block;text-decoration:inherit;width:1em;height:1em;font-size:1em;text-align:center;-webkit-font-smoothing:antialiased;font-smoothing:antialiased;text-rendering:optimizeLegibility

:invalid, :-moz-submit-invalid, :-moz-ui-invalid
  box-shadow: none

input[type=text],
input[type=email],
input[type=password],
input[type=file]
  border: thin solid light-gray
  border-radius: 3px
  box-shadow: none
  box-sizing: border-box
  padding: 8px 12px
  &:focus
    outline: none

.pagination
  margin-bottom: 20px
  text-align: center
  .action
    display: inline-block
    vertical-align: top
    margin: 0 6px
    a
      color: teal
      text-decoration: none
      &:active, &:focus
        outline: none
    &.active
      font-weight: 600

.button.teal, button.teal
  background-color: teal
  padding: 8px 12px
  border-radius: 1px
  color: white
  a
    text-decoration: none
    color: white

.button
  border-radius: 1px
  color: white
  cursor: pointer
  letter-spacing: 0.02em
  padding: 8px 12px
  text-align: center
  text-decoration: none
  hover-darken()
  &.teal
    background-color: teal
    .icon, &:hover
      background-color: light-teal
  &.orange
    background-color: orange
    hover-darken()
  &.red
    background-color: dark-red
    .icon, &:hover
      background-color: red
  &.white
    background-color: white
    color: darker-gray
    &:hover
      color: darker-gray
  &.navy
    background-color: navy
    .icon, &:hover
      background-color: light-navy
  &:hover
    color: white

.icon-button
  border-radius: 3px
  cursor: pointer
  color: white
  height: 40px
  line-height: 40px
  padding: 0
  text-align: left
  text-decoration: none
  position: relative
  .icon
    border-radius: 3px 0 0 3px
    border-right: thin solid rgba(255, 255, 255, 0.25)
    font-size: 1.3em
    width: 40px
    text-align: center
    box-shadow: inset -1px 0 0 0 rgba(255,255,255,0.25)
    float: left
    @media phone
      border-radius: 3px
  .text
    font-size: 1em
    text-align: center
  &:hover
    cursor: pointer
  &:active
    .text
      background-color: dark-teal
  &.teal
    background-color: teal
    .icon, &:hover
      background-color: light-teal
  &.red
    background-color: dark-red
    .icon, &:hover
      background-color: red
  &.orange
    background-color: dark-orange
    .icon, &:hover
      background-color: orange

.select2-container
  vertical-align: top
  border-bottom: 2px solid white
  padding-bottom: 0 !important
  border: none !important
  .select2-choice
    background: white !important
    position: relative
    border-radius: 1px
    &::after
      font-family: 'hw-icons'
      font-size: 0.7em
      content: '\e819'
      color: gray
      position: absolute
      right: 20px
      top: 7px
  a
    background: none !important
    border: thin solid light-gray !important
    border-radius: 3px
    color: white
    box-shadow: none !important
    padding: 6px 12px !important
    .select2-arrow
      display: none !important
    .select2-chosen
      margin-right: 0

.select2-drop
  margin-top: 0px !important
  border: thin solid light-gray !important
  border-top: none !important
  z-index: 10000 !important
  .select2-result-label
    .state
      font-size: .8em
      color: #aaa
      margin-left: 10px
      display: inline-block
      vertical-align: top
      margin-top: 2px
  .select2-search
    display: none
    margin-top: 5px

.zopim
  display: none

.calendar
  position: relative
  background-color: white
  .month_header
    background-color: lighter-gray
    position: relative
    height: 80px
    line-height: 80px
    text-align: center
    .month
      color: darker-gray
      font-size: 1.3em
      .month_name
        font-weight: bold
      @media portrait_tablet
        font-size: 1.1em
      @media phone
        font-size: 1.1em
    .arrow
      border-radius: 3px
      width: 40px
      height: 40px
      line-height: 40px
      text-align: center
      background-color: teal
      position: absolute
      top: 20px
      z-index: 10
      i
        font-size: 1em
        color: white
      &:hover
        cursor: pointer
      &.prev
        left: 20px
        -webkit-transform: rotate(180deg)
        transform: rotate(180deg)
      &.next
        right: 20px
  .table
    padding: 40px
    text-align: center
    @media portrait_tablet
      padding: 20px
    @media phone
      padding: 10px
    table
      width: 100%
      thead
        th
          &.day_of_week
            color: dark-gray
            font-weight: bold
          &:hover
            cursor: default
      tbody
        td
          border-radius: 3px
          padding: 4%
          color: darker-gray
          &:hover
            cursor: default
          &.inactive
            color: light-gray
          &.past
            color: gray
          &.chosen
            background-color: teal
            color: white
          &.booked
            color: darker-gray
            background-color: light-gray
            font-weight: bold
          &.active:hover
            cursor: pointer
          &.active:hover, &.selecting
            background-color: teal
            color: white
          &.active.chosen:hover
            background-color: light-gray
            color: darker-gray
          &.active.chosen.selecting
            background-color: white
          @media landscape_tablet
            padding: 12px
          @media portrait_tablet
            padding: 8px
          @media phone
            padding: 10px

#map
  height: 240px
  margin-bottom: 15px
  box-shadow: gray_shadow
  border-radius: 3px
  .leaflet-control-zoom
    background-color: transparent
    border: 0
    a
      background-size: 30px 30px
      background-position: 0 0
      border-bottom: 0
      opacity: 1
      width: 30px
      height: 30px
      &.leaflet-control-zoom-in
        background-image: url('/images/plus.png')
        margin-bottom: 2px
      &.leaflet-control-zoom-out
        background-image: url('/images/minus.png')

.alert
  font-size: 1em
  opacity: 0
  transition: opacity .6s ease, height .6s ease
  color: white
  display: none
  height: 50px
  line-height: 50px
  padding: 0
  margin: 5px 0
  position: relative
  text-align: left
  width: 100%
  &.active
    display: block
    opacity: 1
  i
    width: 50px
    display: inline-block
    font-size: 1.5em
    height: 50px
    text-align: center
  .title
    font-weight: normal
    margin: 0 10px
    display: inline-block
    vertical-align: top
  &.info
    background-color: teal
    i
      background-color: light-teal
  &.ok
    background-color: dark-green
    i
      background-color: green
  &.warning, &.bolt
    background-color: dark-red
    i
      background-color: red
  &.exclamation, &.question
    background-color: dark-orange
    i
      background-color: orange

.cb
  input[type=checkbox]
    display: none
    &:checked + label:before
      color: darker-gray
      content: "\2713"
      font-size: 15px
      line-height: 15px
      text-align: center
  label
    cursor: pointer
    display: inline-block
    font-size: 13px
    margin-right: 15px
    padding-left: 25px
    position: relative
    &:before
      border: 1px solid light-gray
      bottom: 1px
      content: ""
      display: inline-block
      height: 16px
      left: 0
      margin-right: 10px
      position: absolute
      width: 16px

.radio
  input[type=radio]
    display: none
    &:checked + label:before
      font-family: 'FontAwesome'
      font-size: 13px
      content: "\f111"
      color: teal
      line-height: 15px
      text-align: center
  label
    cursor: pointer
    display: inline-block
    font-size: 13px
    margin: 0 15px 0 0
    padding-left: 25px
    position: relative
    &:before
      border: 2px solid teal
      content: ""
      display: inline-block
      height: 15px
      left: 0
      position: absolute
      width: 15px
      border-radius: 50%

.loader
  top: 50%

.loader, .loader:before, .loader:after {
  display: inline-block;
  width: 100%;
  height: 10px;
  position: absolute;
  z-index: 100000;
  animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-opacity 2s ease-in-out infinite alternate;
  -webkit-animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-opacity 2s ease-in-out infinite alternate;
  -moz-animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-opacity 2s ease-in-out infinite alternate;
  background: linear-gradient(right, teal 0px, teal 10px, transparent 10px)  no-repeat 0px 0px / 10px 10px;
  content: ' ';
}
.loader {
  animation-delay: .1s;
  -webkit-animation-delay: .1s;
  -moz-animation-delay: .1s;
}
.loader:after {
  animation-delay: .2s;
  -webkit-animation-delay: .2s;
  -moz-animation-delay: .2s;
}
.loader.more:before, .loader.more:after {
  content: ' â– ';
  color: teal;
  top: 0;
  line-height: 6px;
  font-size: 22px;
  font-family: "Times New Roman";
  vertical-align: top;
  animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-font 4s cubic-bezier(.1,.85,.9,.15) infinite !important;
  -webkit-animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-font 4s cubic-bezier(.1,.85,.9,.15) infinite !important;
  -moz-animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-font 4s cubic-bezier(.1,.85,.9,.15) infinite !important;
}
.loader.more:before {
  animation-delay: 0s,.2s !important;
  -webkit-animation-delay: 0s,.2s !important;
  -moz-animation-delay: 0s,.2s !important;
}
.loader.more {
  overflow: hidden;
  opacity: 0;
  animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-opacity 2s ease-in-out infinite alternate;
  -webkit-animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-opacity 2s ease-in-out infinite alternate;
  -moz-animation: loading 4s cubic-bezier(.1,.85,.9,.15) infinite, loading-opacity 2s ease-in-out infinite alternate;
  animation-delay: .6s,.4s !important;
  -webkit-animation-delay: .6s,.4s !important;
  -moz-animation-delay: .6s,.4s !important;
}
.loader.more:after {
  animation-delay: .4s,.8s !important;
  -webkit-animation-delay: .4s,.8s !important;
  -moz-animation-delay: .4s,.8s !important;
}

@keyframes loading-opacity {
  0% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 1;
  }
}

@keyframes loading {
  0% {
    background-position: -50% 0px;
  }
  100% {
    background-position: 150% 0px;
  }
}

@keyframes loading-font {
  0% {
    text-indent: calc(-50% - 5px);
  }
  100% {
    text-indent: calc(150% - 10px);
  }
}
