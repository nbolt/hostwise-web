@keyframes fadein {
  from {opacity: 0}
  to   {opacity: 1}
}

@keyframes spin {
  from {transform: rotate(0deg)}
  to {transform: rotate(-360deg)}
}

typicons()
  font-family:'typicons';font-style:normal;font-weight:normal;speak:none;display:inline-block;text-decoration:inherit;width:1em;height:1em;font-size:1em;text-align:center;-webkit-font-smoothing:antialiased;font-smoothing:antialiased;text-rendering:optimizeLegibility

:invalid, :-moz-submit-invalid, :-moz-ui-invalid
  box-shadow: none

input[type=text],
input[type=email],
input[type=password],
input[type=file]
  border: thin solid light-grey
  border-radius: 3px
  box-shadow: none
  box-sizing: border-box
  padding: 8px 12px
  &:focus
    outline: none

.button
  border-radius: 1px
  color: white
  cursor: pointer
  letter-spacing: 0.02em
  padding: 8px 12px
  text-align: center
  text-decoration: none
  hover-darken()
  &.teal
    background-color: primary-color-1
    .icon, &:hover
      background-color: light-teal
  &.yellow
    background-color: primary-color-3
    hover-darken()
  &.red
    background-color: dark-red
    .icon, &:hover
      background-color: red
  &.white
    background-color: white
    color: dark-grey
    &:hover
      color: dark-grey
  &:hover
    color: white
