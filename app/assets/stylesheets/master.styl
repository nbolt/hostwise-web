        .drop-container
          max-height: 260px
      .avatar, .name, .arrow
        display: inline-block
        vertical-align: top
      .avatar
        width: 60px
        height: 60px
        border-radius: 50%
        overflow: hidden
        img
          width: 60px
          height: 60px
      .name
        color: dark-grey
        margin: 15px 20px 0 12px
