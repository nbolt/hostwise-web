html
  height: 100%

html, body, .body
  min-height: 100%
  margin: 0
  font-family: LatoRegular
  color: black
  font-size: 100%
  position: relative

.body, .grey
  background-color: light-gray

header
  padding: 2px 20px 2px 12px
  background-color: white
  position: fixed
  top: 0
  right: 0
  left: 0
  z-index: 10000
  .logo
    img
      vertical-align: top
      width: 64px
    .text
      display: inline-block
      vertical-align: top
      margin: 21px 0 0 15px
      font-size: 1.4em
      font-family: gotham-book
      color: navy
      upcase()
      span
        font-family: gotham-bold
  nav
    float: right
    margin-top: 14px
    #user
      display: inline-block
      vertical-align: top
      margin-top: -10px
      position: relative
      &:hover
        cursor: pointer
        .drop-container
          max-height: 260px
      .avatar, .name, .arrow
        display: inline-block
        vertical-align: top
      .avatar
        width: 60px
        height: 60px
        border-radius: 50%
        overflow: hidden
        img
          width: 60px
          height: 60px
      .name
        color: navy
        margin: 15px 10px 0 12px
        font-size: 1.2em
      .arrow
        margin: 19px 40px 0 0
        .typcn
          transform: rotate(90deg)
    .link
      display: inline-block
      vertical-align: top
      margin: 0 10px
      position: relative
      .head-button
        background-color: teal
        padding: 8px 12px
        border-radius: 1px
        color: white
        hover-darken()
        &.login
          background-color: navy
          hover-darken()
      > a
        text-decoration: none
        color: white
      &:hover
        cursor: pointer
      &.hover:hover
        .drop-container
          max-height: 260px
      &.head-button
        .drop-container
          top: 42px
          right: -25px
          .drop-arrow
            margin-left: 166px
      .drop-container
        position: absolute
        top: 52px
        width: 260px
        right: 1px
        .drop
          background-color: navy
        .drop-arrow
          width: 0
          height: 0
          border-left: 8px solid transparent
          border-right: 8px solid transparent
          border-bottom: 10px solid navy
          margin-left: 204px
        .links
          padding: 6px 0
          a
            &:hover
              background-color: lighter-navy
            .link
              margin: 8px 0 8px 15px
              color: dark-gray
            &:hover .link
              color: white
        &.properties
          overflow-y: scroll
          .search
            overflow: auto
            .input
              position: relative
              background-color: lighter-navy
              margin-left: 12px
              box-sizing: border-box
              width: 220px
              border-radius: 20px
              margin: 15px auto 0
              .fa
                position: absolute
                left: 16px
                top: 10px
                color: white
              input
                font-size: .9em
                background: none
                border: none
                padding-left: 40px
                color: white
                &:active, &:focus
                  outline: none
                  box-shadow: none
                &::-webkit-input-placeholder, &:-moz-placeholder, &::-moz-placeholder, &:-ms-input-placeholder
                  color: #4E5562
                  opacity: 1
          .links
            padding: 8px 0
            a
              &:active, &:focus
                outline: none
              .link
                display: inline-block
                vertical-align: top
                color: dark-gray
                max-height: 23px
                width: 220px
                text-align: left
              &:hover .link
                color: white

footer
  background-color: navy
  color: white
  padding: 70px 30px
  > div
    margin: 0 auto
    width: 900px
    > div
      display: inline-block
      vertical-align: top
      a
        display: block
      &.left
        font-size: 14px
        width: 600px
        a
          margin: 5px 0
          width: 80px
        p
          margin: 25px 0 0
      &.right
        text-align: center
        .button
          margin-bottom: 25px
          text-transform: uppercase
        .fa-heart
          margin: 0 3px
        .fa-facebook, .fa-twitter
          border-radius: 50%
          cursor: pointer
          float: left
          height: 30px
          line-height: 30px
          width: 30px
        .fa-facebook
          background-color: facebook-blue
          margin-left: -80px
        .fa-twitter
          background-color: twitter-blue
          margin-left: -40px
        div
          margin: 5px 0
          font-size: 13px
  a
    color: white
    text-decoration: none

