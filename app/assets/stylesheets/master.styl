            &:hover .link
              border-bottom: thin solid light-navy
        &.properties
          overflow-y: scroll
          .search
            overflow: auto
            .input
              position: relative
              background-color: #2D3842
              margin-left: 12px
              box-sizing: border-box
              width: 220px
              border-radius: 20px
              margin: 15px auto 0
              .fa
                position: absolute
                left: 16px
                top: 10px
                color: light-navy
              input
                font-size: .9em
                background: none
                border: none
                padding-left: 40px
                color: light-navy
                &:active, &:focus
