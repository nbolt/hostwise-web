.flash
  border-radius: 3px
  box-sizing: border-box
  color: white
  font-size: 14px
  opacity: 0
  transition: opacity .6s ease, height .6s ease
  padding: 8px 12px
  display: inline-block
  vertical-align: top
  &.success
    background-color: green
  &.failure
    background-color: red
  &.info
    background-color: orange

#search-bar
  #search, #filters
    display: inline-block
    vertical-align: top
  #search
    margin-right: 10px
