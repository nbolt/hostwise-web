          margin: 17px 0 0 17px
      .drop-container
        background-color: navy
        .search
          margin: 20px 0 10px
          .input
            position: relative
            background-color: navy
            margin-left: 12px
            padding: 8px 12px
            box-sizing: border-box
            width: 220px
            border-radius: 20px
            .fa
              position: absolute
              left: 12px
              top: 11px
            input
              font-size: .9em
              background: none
              border: none
