      .progress-container
        background-color: lighter-navy
        padding: 30px 0
      .progress
        margin: 0 auto
        position: relative
        width: 324px
        .typcn
          background-color: white
          color: teal
          font-size: 20px
          line-height: 20px
        hr
          border: 0
          border-top: 2px solid white
          position: absolute
          top: 5px
          width: 100%
          z-index: 1
        span
          background-color: lighter-navy
          border: 2px solid white
          border-radius: 50%
          color: white
