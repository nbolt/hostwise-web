    margin: 80px 0 20px
    padding: 10px

.button.teal, button.teal
  background-color: teal
  padding: 8px 12px
  border-radius: 1px
  color: white
  a
    text-decoration: none
    color: white

.drop-container
  max-height: 0
  overflow: hidden
  box-sizing: border-box
  transition: max-height .4s ease-in-out
  z-index: 1
  .links
    a
      display: block
      text-decoration: none
      .link
        margin: 8px 0 8px 15px

#sidebar-container
