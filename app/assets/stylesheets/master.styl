  background-color: light-navy
  position: fixed
  top: 64px
  min-height: 100%
  left: 0
  bottom: 0
  width: 220px
  transition: width .4s ease-in-out
  overflow: hidden
  @media landscape_tablet
    width: 80px
  @media portrait_tablet
    width: 80px
