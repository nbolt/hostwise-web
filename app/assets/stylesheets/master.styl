          text-align: center
          width: 24px
          z-index: 2
          &.one
            margin-left: 0
          &.active
            background-color: teal
  .flash
    position: absolute
    top: -50px
    width: 600px
    left: 50%
    margin-left: -300px
    min-height: 38px

.flash
  border-radius: 3px
  box-sizing: border-box
  color: white
  font-size: 14px
  opacity: 0
  transition: opacity .6s ease, height .6s ease
  padding: 8px 12px
  display: inline-block
  vertical-align: top
  &.success
    background-color: green
  &.failure
    background-color: red
  &.info
    background-color: orange

#search-bar
  #filters
    float: right
  #search
    padding-right: 10px
    position: relative
    overflow: hidden
    i
      color: dark-gray
      position: absolute
      left: 12px
      top: 14px
      font-size: 1.25em
    input
      width: 100%
      padding: 13px 12px 14px 40px
      border-radius: 1px
