black = #24272A
red = #AB133E
green = #9ABF72
dark-grey = #808080
light-grey = #EDEEF1
light-blue = #7296BF
light-navy = #B9C1D5
navy = #2D3842
dark-navy = #242A30
teal = #34AAB0

facebook-blue = #3d599b
twitter-blue  = #00abee

@keyframes fadein {
    from {opacity: 0}
    to   {opacity: 1}
}

@keyframes spin {
    from {transform: rotate(0deg)}
    to {transform: rotate(-360deg)}
}

@font-face
  font-family: 'gotham-book'
  src: url('/type/gotham/gotham-book.woff') format('woff')
  
@font-face
  font-family: 'gotham-bold'
  src: url('/type/gotham/gotham-bold.woff') format('woff')
  

:invalid, :-moz-submit-invalid, :-moz-ui-invalid
  box-shadow: none

html, body, .body
  height: 100%
  margin: 0
  font-family: Open Sans, Helvetica Neue,HelveticaNeue,Helvetica, Arial, sans-serif
  color: black
  background-color: light-grey
  font-size: 100%
  
header
  padding: 20px
  background-color: white
  .logo
    img
      width: 60px
    .text
      display: inline-block
      vertical-align: top
      margin: 21px 0 0 15px
      font-size: 1.4em
      font-family: gotham-book
      color: navy
      upcase()
      span
        font-family: gotham-bold
  nav
    float: right
    margin-top: 14px
    #user
      display: inline-block
      vertical-align: top
      margin-top: -10px
      position: relative
      &:hover
        cursor: pointer
        .drop-container
          max-height: 260px
      .avatar, .name, .arrow
        display: inline-block
        vertical-align: top
      .avatar
        width: 60px
        height: 60px
        border-radius: 99px
        overflow: hidden
      .name
        color: dark-grey
        margin: 15px 20px 0 12px
        font-size: 1.2em
      .arrow
        margin: 19px 40px 0 0
        .typcn
          transform: rotate(90deg)
      .drop-container
        position: absolute
        top: 71px
        width: 260px
        left: -67px
        .drop
          background-color: navy
        .drop-arrow
          width: 0
          height: 0 
          border-left: 8px solid transparent
          border-right: 8px solid transparent
          border-bottom: 10px solid navy
          margin-left: 204px
        .links
          padding: 6px 0
          a
            .link
              margin: 8px 0 8px 15px
              color: light-navy
              border-bottom: thin solid transparent
            &:hover .link
              border-bottom: thin solid light-navy
    .link
      display: inline-block
      vertical-align: top
      margin: 0 10px
      .button
        background-color: teal
        padding: 8px 12px
        hover-darken()
      a
        text-decoration: none
        color: white
          
.body
  width: 976px
  margin: 40px auto
  
.drop-container
  max-height: 0
  overflow: hidden
  box-sizing: border-box
  transition: max-height .4s ease-in-out
  .links
    a
      display: block
      text-decoration: none
      .link
        margin: 8px 0 8px 15px
  
#sidebar-container
  background-color: navy
  position: absolute
  top: 105px
  bottom: 0
  left: 0
  width: 80px
  transition: width .4s ease-in-out
  overflow: hidden
  &:hover
    width: 250px
  #sidebar
    color: white
    width: 250px
    .section
      padding-top: 15px
      &::after
        content: ''
        display: block
        height: 1px
      &:hover
        cursor: pointer
        background-color: dark-navy
      &.active
        background-color: navy
      .title
        margin-bottom: 15px
      .icon, .text, .arrow
        display: inline-block
        vertical-align: top
      .icon
        margin-left: 21px
        .typcn
          font-size: 2em
          &.typcn-delete-outline
            margin-left: 2px
            transform: rotate(45deg)
      .text
        margin: 13px 0 0 28px
        width: 125px
      .arrow
        margin-top: 13px
      .drop-container
        background-color: dark-navy
        .search
          margin: 20px 0 10px
          .input
            position: relative
            background-color: #2D3842
            margin-left: 12px
            padding: 8px 12px
            box-sizing: border-box
            width: 220px
            border-radius: 20px
            .typcn
              position: absolute
              left: 12px
              top: 8px
            input
              font-size: .9em
              background: none
              border: none
              padding-left: 25px
              color: light-navy
              &:active, &:focus
                outline: none
                box-shadow: none
              &::-webkit-input-placeholder, &:-moz-placeholder, &::-moz-placeholder, &:-ms-input-placeholder
                color: #4E5562
                opacity: 1
        .links
          padding-bottom: 8px
          a
            &:active, &:focus
              outline: none
            .link
              display: inline-block
              vertical-align: top
              color: light-navy
              border-bottom: thin solid transparent
              max-height: 23px
            &:hover .link
              border-bottom: thin solid light-navy
form
  .button
    margin: auto
    text-align: center
    .skip
      color: light-blue
      display: inline-block
      margin-left: 25px
      &:hover
        cursor: pointer
  button
    border: 2px solid red
    width: 220px
    border-radius: 3px
    margin: 25px auto
    padding: 8px 4px 10px 6px
    background: white
    &:focus, &:active
      outline: none
    &:hover
      background-color: red
      color: white
      cursor: pointer
    .text
      margin-right: 6px
    .typn
      margin-top: -1px
    .text, .typcn
      display: inline-block
      vertical-align: top

#signup, #signin
  width: 600px
  margin: 40px auto
  text-align: center
  position: relative
  .title
    font-size: 2em
    margin-bottom: 25px
  .field
    margin: 15px
    input
      padding: 8px 12px
      border: thin solid light-grey
      border-radius: 3px
      width: 300px
      &:focus
        outline: none
  .form-container
    overflow: hidden
    .steps
      width: 2400px
      transition: margin-left .6s ease
      .step
        width: 600px
        display: inline-block
        vertical-align: top
  .flash
    position: absolute
    top: -50px
    width: 400px
    left: 50%
    margin-left: -200px
      
.flash
  border-radius: 3px
  box-sizing: border-box
  color: white
  opacity: 0
  transition: opacity .6s ease, height .6s ease
  padding: 6px
  text-align: center
  height: 34px
  width: 400px
  margin: auto
  &.success
    background-color: green
  &.failure
    background-color: red
  &.info
    background-color: light-blue
    height: 80px
      
#search
  width: 600px
  margin: auto
  input
    width: 100%
    padding: 8px 12px
    border-radius: 3px
    border: thin solid light-grey
    
.body .page-title
  font-size: 2em
  text-align: center
  
.step-circles
  text-align: center
  margin: 40px 0 10px
  .step
    display: inline-block
    vertical-align: top
    background-color: light-grey
    border-radius: 99px
    width: 40px
    height: 40px
    margin: 0 15px
    color: white
    &.active
      background-color: red
    .num
      font-size: 1.5em
      margin-top: 2px
      
#property-form-container
  overflow: hidden
  width: 600px
  margin: auto
  .flash
    margin: 20px auto
  .steps
    width: 3000px
    transition: margin-left .6s ease
    .step
      width: 600px
      display: inline-block
      vertical-align: top
      position: relative
      form
        .section
          .title
            font-size: 1.5em
            margin-bottom: 20px
            text-align: center
          .row
            margin: 20px 0
            &.two
              .field
                display: inline-block
                vertical-align: top
                margin-right: 15px
                &:last-child
                  margin-right: 0
                .select2-container
                  width: 290px
            &.three
              .field
                display: inline-block
                vertical-align: top
                margin-right: 15px
                width: 188px
                &:last-child
                  margin-right: 0
                .select2-container
                  width: 188px
            .field
              width: 290px
              input
                padding: 8px 12px
                border-radius: 3px
                border: thin solid light-grey
                width: 100%
                box-sizing: border-box
                &:focus
                  outline: none
  .services
    .service
      background-color: light-grey
      width: 100px
      height: 100px
      display: inline-block
      vertical-align: top
      margin: 0 25px
      border-radius: 99px
      .text
        text-align: center
        width: 80px
        margin: 25px auto
      &:hover, &.active
        background-color: red
        color: white
        cursor: pointer
      &:hover.active
        background-color: light-grey
        color: black
      &.selecting
        background-color: light-grey !important
        color: black
      &.active.selecting
        background-color: red !important
        color: white
  .tabs
    text-align: center
    .tab
      display: inline-block
      vertical-align: top
      margin: 10px 20px
      padding-bottom: 4px
      &.active
        border-bottom: thin solid light-grey
      &:hover
        cursor: pointer
  .payments
    .payment
      text-align: center
      width: 300px
      margin: 25px auto
      padding: 10px
      border-radius: 3px
      background-color: #eee
      label
        margin: 0 10px
      .brand
        display: inline-block
        vertical-align: top
      &:hover
        cursor: pointer
        
#property
  #title
    text-align: center
    font-size: 2em
  #address
    text-align: center
    color: #999
    margin-top: 15px
  #tabs
    text-align: center
    margin: 25px 0
    .tab
      display: inline-block
      vertical-align: top
      margin: 0 10px
      font-size: 1.25em
      padding: 2px
      &:hover
        cursor: pointer
      &:hover, &.active
        border-bottom: thin solid red
  #tab-content
    .flash
      margin: 25px auto
    .actions
      text-align: center
      .action
        margin: 0 10px
        color: #666
        &:hover, &.active
          color: red
        &:hover
          cursor: pointer
    .tab
      width: 600px
      margin: 15px auto
      display: none
      &.active
        display: block
      .section
        text-align: center
        .title
          font-size: 1.25em
        .field
          display: inline-block
          vertical-align: top
          margin: 25px 10px
      #bookings
        .booking
          border: thin solid #ccc
          width: 500px
          padding: 15px
          margin: 20px auto
          border-radius: 3px
          text-align: left
          .cancel
            float: right
            font-size: 1.75em
            margin-top: -10px
            .typcn::before
              content: '\e121'
            &:hover
              cursor: pointer
              color: red
              .typcn::before
                content: '\e122'
          .date
            color: #999
          a
            color: black
            text-decoration: none
            &:hover
              text-decoration: underline


calendar
  .arrows
    position: absolute
    left: 0
    right: 0
    z-index: 10
    .arrow
      font-size: 1.5em
      &:hover
        cursor: pointer
      &.prev
        float: left
        .typcn::before
          content: '\e00d'
      &.next
        float: right
        .typcn::before
          content: '\e01a'
  .table
    text-align: center
    table
      width: 599px
      thead
        th
          font-size: 1.5em
          padding-bottom: 20px
      tbody
        td
          padding: 18px
          border: thin solid light-grey
          &.inactive
            color: white
          &.past
            color: light-grey
          &.active:hover
            background-color: #efefef
            cursor: pointer
          &.selecting
            background-color: red !important
            color: white
          &.chosen
            background-color: red
            color: white
            &:hover
              background-color: #efefef
              color: black
            &.selecting
              background-color: white !important
              color: black
              
#home
  #add-property
    text-decoration: none
    .text
      width: 200px
      margin: 50px auto
      text-align: center
      background-color: red
      padding: 10px
      border-radius: 3px
      color: white
      border: 2px solid white
    &:hover .text
      border: 2px solid red
      background-color: white
      color: black
  #properties
    margin-top: 50px
    .property
      border: thin solid #ccc
      width: 500px
      padding: 15px
      margin: 20px auto
      border-radius: 3px
      a
        color: black
        text-decoration: none
        &:hover
          text-decoration: underline
   
.new-payment
  color: #888
  width: 410px
  margin: auto
  .cards
    background-color: #eee
    border: thin solid grey
    border-radius: 3px
    .card
      padding: 12px 20px
      .text
        display: inline-block
        vertical-align: top
        margin-top: 2px
        font-size: 1.2em
        font-weight: 800
      input
        margin: 7px 10px 0 1px
        display: inline-block
        vertical-align: top
      img
        float: right
      &:hover, &.chosen
        background-color: green
        color: white
        cursor: pointer
        .text
          font-weight: 600
  .card-entry
    border: thin solid #ccc
    border-radius: 3px
    .title
      margin-top: 20px
      background-color: #eee
      padding: 10px
      font-weight: bold
      font-size: 1.1em
      img
        float: right
    .card-details
      padding: 20px
      .field
        display: inline-block
        .label
          font-size: .75em
          color: grey
          text-transform: uppercase
          font-weight: bold
          margin-bottom: 5px
        &.card-number
          input
            width: 185px
            margin-right: 17px
        &.expiry
          input
            width: 74px
        &.cvc
          margin: 12px 0 0 17px
          input
            width: 54px

.select2-container
  vertical-align: top
  border-bottom: 2px solid white
  padding-bottom: 0 !important
  border: none !important
  a
    background: none !important
    border: thin solid light-grey !important
    border-radius: 3px
    color: white
    box-shadow: none !important
    padding: 6px 12px !important
    .select2-arrow
      display: none !important
    .select2-chosen
      margin-right: 0

.select2-drop
  margin-top: 0px !important
  border: thin solid light-grey !important
  border-top: none !important
  .select2-result-label
    .state
      font-size: .8em
      color: #aaa
      margin-left: 10px
      display: inline-block
      vertical-align: top
      margin-top: 2px
  .select2-search
    margin-top: 5px
