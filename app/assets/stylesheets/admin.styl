.contractors
  a
    color: teal
    text-decoration: none
  .header
    margin-bottom: 30px
    position: relative
    .button
      position: absolute
      right: 0
      top: 0
      width: 180px
    .fa
      margin-right: 10px
  .pagination
    background-color: white
    ul
      margin: 0
      padding: 30px 0 10px
  .highlight
    background-color: white
    padding: 10px 0 40px
    .total
      border-right: 1px solid light-gray
      margin: 0 40px 0 30px
      padding-right: 40px
      strong
        color: teal
        margin-left: 15px
    .search
      i
        color: darker-gray
      input
        border: 0
    hr
      border: 0
      border-top: 1px solid light-gray
  table
    background-color: white
    font-size: 14px
    width: 100%
    th, td
      padding: 10px
      text-align: left
    th
      a
        color: light-navy
        i
          color: light-gray
          margin-left: 5px
    tr
      border-top: 1px solid light-gray
      &:first-child
        border-top: 0
    td
      &.position
        color: orange
        text-transform: uppercase
      &.name, &.status
        text-transform: capitalize
    .avatar
      border-radius: 50%
      height: 35px
      width: 35px

.edit-contractor
  form
    .select2-container
      font-size: 14px
      width: 100%
      > a
        color: orange
        font-weight: bold
        margin-top: -1px
    .section
      .bgc, .contract
        font-size: 14px
        margin: 50px auto 0
        text-align: left
        width: 80%
        a
          display: inline-block
          vertical-align: top
          margin: 4px 0 0 10px
        .fa
          color: teal
          font-size: 25px
          margin-right: 5px
          &.fa-times-circle-o
            color: dark-red
        span
          line-height: 25px
          vertical-align: top
      .bgc
        margin-top: 10px
  .steps .step.stats form
    height: 50px
    line-height: 50px
    padding: 0
    .section
      h3
        font-weight: bold
      i
        font-size: 20px
        margin-right: 10px
      .teal
        color: teal
      .red
        color: red
