#property
  .property
    background-color: white
    margin: 25px auto 12px
    border-radius: 3px
    height: 150px
    box-shadow: gray_shadow
    overflow: hidden
    position: relative
    @media phone
      height: auto
      font-size: 0.9em
    .beds, .bed, .text
      display: inline-block
      vertical-align: top
    .beds
      position: absolute
      right: 20px
      top: 50%
      .text
        font-weight: 600
        margin-right: 10px
      .bed
        padding: 0 15px
        border-right: thin solid light-gray
        &:last-child
          border-right: 0
        @media phone
          padding: 0 5px
      @media landscape_tablet
        display: block
        margin-top: 15px
        position: static
      @media portrait_tablet
        display: block
        margin-top: 15px
        position: static
      @media phone
        font-size: 0.95em
        display: block
        margin-top: 15px
        position: static
    .right
      overflow: hidden
    .top
      padding: 18px
      height: 65px
      position: relative
      @media phone
        height: auto
    .bottom
      border-top: 2px solid light-gray
      font-size: .9em
      .next-service
        float: right
        background-color: lighter-gray
        width: 212px
        height: 47px
        line-height: 47px
        text-align: center
        &:hover
          background-color: light-gray
        .text
          color: darker-gray
        i
          color: dark-gray
          margin-right: 10px
          @media phone
            display: none
        @media phone
          float: none
          padding: 0 10px 0 18px
          text-align: left
          width: auto
      .left
        padding: 15px 18px
      .id, .rooms, .text
        display: inline-block
        vertical-align: top
      .id, .id a
        color: border-gray
      .id
        color: dark-gray
      .rooms
        color: dark-gray
        i
          color: dark-gray
          display: inline-block
          vertical-align: top
          font-size: 1.1em
          margin: -2px 5px 0 20px
    .icon-button
      display: inline-block
      vertical-align: top
      float: right
      margin-top: 15px
      .text
        @media portrait_tablet
          padding: 0 10px
    .manage
      float: right
      font-size: .9em
      color: teal
      margin: 25px 15px 0 0
      display: none
      &:hover
        text-decoration: underline
    .photo
      display: block
      padding: 10px
      width: 100px
      height: 100px
      padding: 25px
      background-color: lighter-gray
      float: left
      img
        border-radius: 50%
        height: 100%
        width: 100%
      @media phone
        display: none
    .title
      margin-top: 15px
      display: inline-block
      vertical-align: top
      .name
        font-weight: bold
      .address
        margin-top: 4px
        color: dark-gray
        .city_state
          @media portrait_tablet
            display: block
          @media phone
            display: block
      @media landscape_tablet
        margin-top: 0
      @media portrait_tablet
        margin-top: 0
      @media phone
        display: block
        margin-top: 0
    .edit
      position: absolute
      right: 3px
      top: 3px
      background-color: lighter-gray
      border-radius: 1px
      color: darker-gray
      z-index: 1000
      padding: 5px
      font-size: 0.8em
      cursor: pointer
    a
      color: black
      text-decoration: none
      &:hover
        text-decoration: underline
  .marketing
    .purchase-option, .rent-option
      display: inline-block
      vertical-align: top
      width: 44%
      padding: 40px 3%
      @media portrait_tablet
        width: 94%
        display: block
        text-align: center
        padding: 40px 3% 60px
      @media phone
        width: 94%
        display: block
        text-align: center
        padding: 40px 3% 60px
      .left, .right
        display: inline-block
        vertical-align: top
        @media phone
          display: block
        @media portrait_tablet
          display: block
      .left
        width: 30%
        @media phone
          width: 100%
        @media portrait_tablet
          width: 100%
        img
          width: 150px
          @media landscape_tablet
            width: 120px
      .right
        width: 65%
        margin-left: 5%
        position: relative
        @media phone
          width: 100%
          margin-left: 0
        @media portrait_tablet
          width: 100%
          margin-left: 0
        h4
          color: dark-blue
          @media landscape_tablet
            margin: 0 0 10px
        .desc
          font-size: 14px
          line-height: 20px
          color: heavy-gray
        .learn-more
          position: absolute
          width: 170px
          right: 0px
          margin-top: 15px
          @media landscape_tablet
            margin-top: 10px
          @media phone
            margin: 20px auto 0
            position: static
          @media portrait_tablet
            margin: 20px auto 0
            position: static
          a.btn
            position: relative
            color: light-blue
            border-radius: 20px
            -webkit-box-shadow: none
            box-shadow: none
            background-color: white
            outline: none
            margin-top: 0
            padding: 7px 0
            span
              letter-spacing: 0.05em
              text-transform: capitalize
            .circle
              background-color: light-blue
              border-radius: 50%
              padding: 3px
              color: white
              position: absolute
              right: 9px
              top: 7px
              width: 12px
              height: 12px
              i
                width: 0
                height: 0
                border-top: 5px solid transparent
                border-bottom: 5px solid transparent
                border-left: 5px solid white
                display: inline-block
                margin: 1px 0 0 2px
                vertical-align: top
    .purchase-option
      background-color: lighter-gray
      .desc
        strong
          color: light-blue
    .rent-option
      background-color: light-gray
      .desc
        strong
          color: light-orange
