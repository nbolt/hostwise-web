.ngdialog
  .ngdialog-content
    background: white
    color: darker-gray
    margin: auto
    max-width: 100%
    position: relative
    .modal
      position: relative
      .flash
        border-radius: 0
        width: 100%
  .ngdialog-close
    color: gray
    font-size: 1.5em
    margin-right: 6px
    position: absolute
    right: 0
    top: 0
    transition: opacity .5s ease-in-out
    hover-darken()
    &:hover
      cursor: pointer
    &::before
      typicons()
      content: '\e057'

